{% extends 'auth.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include 'components/_flashes.html.twig' %}

                        <h1>Sign Up</h1>

                        <p class="text-muted">Create your account</p>

                        {{ form_start(form) }}

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="icon-user"></i></span>
                            </div>
                            {{ form_widget(form.firstName, {'attr': {'placeholder': 'Фамилия'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="icon-user"></i></span>
                            </div>
                            {{ form_widget(form.lastName, {'attr': {'placeholder': 'Имя'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="icon-user"></i></span>
                            </div>
                            {{ form_widget(form.middleName, {'attr': {'placeholder': 'Отчество'}}) }}
                            {{ form_errors(form.middleName) }}
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">+</span>
                            </div>
                            {{ form_widget(form.phone, {'attr': {'placeholder': 'Мобильный телефон'}}) }}
                            {{ form_errors(form.phone) }}
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-lock"></i>
                                </span>
                            </div>
                            {{ form_widget(form.plainPassword, {'attr': {'placeholder': 'Password'}}) }}
                            {{ form_errors(form.plainPassword) }}
                        </div>

                        <button type="submit" class="btn btn-block btn-success">Создать аккаунт</button>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
